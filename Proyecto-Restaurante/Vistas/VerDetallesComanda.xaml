<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Restaurante.Vistas"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Class="Proyecto_Restaurante.Vistas.VerDetallesComanda"
        mc:Ignorable="d"
        Title="VerDetallesComanda" Height="550" Width="500">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" x:Key="TitulosComanda">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <ControlTemplate x:Key="ListBoxControlTemplate" TargetType="{x:Type ListBox}">
            <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="1" SnapsToDevicePixels="True">
                <ScrollViewer Focusable="False" Padding="{TemplateBinding Padding}">
                    <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                </ScrollViewer>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" TargetName="Bd" Value="White"/>
                    <Setter Property="BorderBrush" TargetName="Bd" Value="#FFD9D9D9"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsGrouping" Value="True"/>
                        <Condition Property="VirtualizingPanel.IsVirtualizingWhenGrouping" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
                </MultiTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
    </Window.Resources>
    <DockPanel >
        <TextBlock Text="{Binding Path=TituloComanda}" FontSize="18" FontWeight="Bold" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
        <Border BorderBrush="Blue" BorderThickness="1" CornerRadius="3" DockPanel.Dock="Top" Margin="10">
            <Grid Height="80" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Camarero" Grid.Column="0" Grid.Row="0" Style="{StaticResource TitulosComanda}"/>
                <Border BorderBrush="Blue" BorderThickness="1" Grid.Column="1" Grid.Row="0" Grid.RowSpan="3"/>
                <TextBlock Text="Mesa" Grid.Column="2" Grid.Row="0" Style="{StaticResource TitulosComanda}"/>
                <Border BorderBrush="Blue" BorderThickness="1" Grid.Column="3" Grid.Row="0" Grid.RowSpan="3"/>
                <TextBlock Text="No. Personas" Grid.Column="4" Grid.Row="0" Style="{StaticResource TitulosComanda}"/>
                <Border BorderBrush="Blue" BorderThickness="1" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5"/>
                <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource TitulosComanda}" Text="{Binding Path=ComandaRecibida.Empleado.Nombre}"/>
                <TextBlock Grid.Column="2" Grid.Row="2" Style="{StaticResource TitulosComanda}" Text="{Binding Path=ComandaRecibida.Mesa.NombreMesa}"/>
                <TextBlock Grid.Column="4" Grid.Row="2" Style="{StaticResource TitulosComanda}" Text="{Binding Path=ComandaRecibida.CantidadPersonas}"/>
            </Grid>
        </Border>

        <!--<Border BorderBrush="Blue" BorderThickness="1" CornerRadius="3" DockPanel.Dock="Top" Margin="10">
            <Grid VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Cantidad" Grid.Column="0" Grid.Row="0" Style="{StaticResource TitulosComanda}"/>
                <Border BorderBrush="Blue" BorderThickness="1" Grid.Column="1" Grid.Row="0"/>
                <TextBlock Text="Producto" Grid.Column="2" Grid.Row="0" Style="{StaticResource TitulosComanda}"/>
                <Border BorderBrush="Blue" BorderThickness="1" Grid.Column="3" Grid.Row="0"/>
                <TextBlock Text="Importe" Grid.Column="4" Grid.Row="0" Style="{StaticResource TitulosComanda}"/>
                <Border BorderBrush="Blue" BorderThickness="1" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5"/>
                <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource TitulosComanda}"/>
                <TextBlock Grid.Column="2" Grid.Row="2" Style="{StaticResource TitulosComanda}"/>
                <TextBlock Grid.Column="4" Grid.Row="2" Style="{StaticResource TitulosComanda}"/>
            </Grid>
        </Border>-->
        <Border BorderBrush="Blue" BorderThickness="1" CornerRadius="3" DockPanel.Dock="Bottom" Margin="10,0,10,5">
            <Grid VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Total:" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Border BorderBrush="Blue" BorderThickness="1" Grid.Row="0" Grid.Column="2"/>
                <TextBlock Text="{Binding Path=TotalComanda}" Grid.Column="4" Grid.Row="0" Style="{StaticResource TitulosComanda}"/>
            </Grid>
        </Border>
        <DataGrid ItemsSource="{Binding ComandaRecibida.DetallescomandaCollection}" AutoGenerateColumns="False" IsReadOnly="True" Margin="10" Style="{DynamicResource DataGridStyle}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle}" RowHeaderStyle="{DynamicResource DataGridRowHeaderStyle}" RowStyle="{DynamicResource DataGridRowStyle}" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="100"/>
                <DataGridTextColumn Header="Producto" Binding="{Binding Producto.NombreProducto}" Width="2*"/>
                <DataGridTextColumn Header="Importe" Binding="{Binding ImporteTotalProductos}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
